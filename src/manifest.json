{
  "manifest_version": 3,
  "name": "SkinScanner ðŸ”Ž: CS2 Multi-Market Price Checker",
  "version": "2.8.1",
  "description": "Search helper to find CSGO Skins across multiple CS2 marketplaces",
  "action": { "default_popup": "index.html" },
  "icons": {
    "16": "icons/skinscanner-16.png",
    "48": "icons/skinscanner-48.png",
    "128": "icons/skinscanner-128.png"
  },
  "permissions": ["storage", "webNavigation"],
  "host_permissions": [
    "https://rapidskins.com/*",
    "https://www.rapidskins.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/skinMap.json",
        "data/buffMap.json",
        "data/bMarketMap.json",
        "data/c5Map.json",
        "data/uuMap.json",
        "data/ecoMap.json",
        "data/pirateMap.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "skin@scanner.skinscanner",
      "strict_min_version": "109.0"
    }
  },
  "minimum_chrome_version": "121"
}
