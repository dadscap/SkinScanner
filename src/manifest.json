{
  "manifest_version": 3,
  "name": "SkinScanner ðŸ”Ž",
  "version": "2.1.2",
  "description": "Open multiple marketplace search links for CS2 skins based on input.",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/skinscanner-16.png",
    "48": "icons/skinscanner-48.png",
    "128": "icons/skinscanner-128.png"
  },
  "permissions": [
    "storage"
  ],

  "web_accessible_resources": [
    {
      "resources": [ "data/mappings.json" ],
